CC= gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC= main.c holberton.c
NAME= holberton
OBJ= $(patsubst %.c,%.o,$(SRC))
RM= rm -f
all: $(OBJ)
        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)
.PHONY: clean oclean fclean re
clean:
        $(RM) *~ $(NAME)
oclean:
        $(RM) $(OBJ)
fclean: clean oclean
re: oclean all
